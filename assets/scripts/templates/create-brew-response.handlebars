{{#each brews as |brew|}}

 <div class="container-fluid col-sm-4 list">
  <h1 data-id="{{brew.id}}"><a class="show-brew"> <small>{{brew.name}}</small></a></h1>
  <ul data-id="{{brew.id}}">
    <li>{{#if brew.brewery}}
      {{brew.brewery}}
    {{else}}
    brewery
    {{/if}}</li>
    <li class="handlebars-form-hidden"><button class="btn btn-primary btn-block show-brew-to-rate">Rate</button></li>
  </ul>

  <form id="brew-form-{{brew.id}}" class="add-ratings-form">
    <div class="form-group">
      <input class="form-control handlebars-form-hidden" name="name" type="text" value="{{brew.brewery}} {{brew.name}}">
    </div>
    <div class="form-group">
      <input class="form-control " name="brewery" type="text" value="{{brew.brewery}}">
    </div>
    <div class="form-group">
      <input class="form-control" name="rating" type="text" placeholder="Rate: 0-5" required>
    </div>
    <div class="form-group">
      <input class="form-control" name="notes" placeholder="notes" type="text">
    </div>
    <input type="submit" class="btn btn-primary btn-block" value="Rate">
  </form>
</div>

{{/each}}
